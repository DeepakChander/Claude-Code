# =============================================
# OPENANALYST API - PRODUCTION ENVIRONMENT
# =============================================
# Copy this file to .env.production and fill in your values

# =============================================
# OPENROUTER CONFIGURATION (Required)
# =============================================
ANTHROPIC_BASE_URL=https://openrouter.ai/api
ANTHROPIC_AUTH_TOKEN=sk-or-v1-your-openrouter-key-here
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=anthropic/claude-sonnet-4

# =============================================
# SERVER CONFIGURATION
# =============================================
PORT=3456
NODE_ENV=production
HOST=0.0.0.0

# =============================================
# MONGODB CONFIGURATION (Required)
# =============================================
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/openanalyst?retryWrites=true&w=majority

# =============================================
# KAFKA CONFIGURATION
# =============================================
# These are set by docker-compose, but can be overridden
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_USE_SSL=false
KAFKA_REQUEST_TOPIC=agent-requests
KAFKA_RESPONSE_TOPIC=agent-responses
KAFKA_CONSUMER_GROUP=openanalyst-workers
KAFKA_CLIENT_ID=openanalyst-api

# =============================================
# PENDING RESPONSE CONFIGURATION
# =============================================
PENDING_RESPONSE_TTL_HOURS=24

# =============================================
# SECURITY CONFIGURATION (Required)
# =============================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
API_KEY=your-api-key-for-authentication

# =============================================
# WORKSPACE CONFIGURATION
# =============================================
WORKSPACE_BASE_PATH=/tmp/claude-agent-workspaces
MAX_WORKSPACE_SIZE_MB=500

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# =============================================
# CORS (Add your frontend domains)
# =============================================
ALLOWED_ORIGINS=https://your-frontend.com,https://app.your-domain.com
