# ============================================
# OPENROUTER CONFIGURATION
# ============================================
ANTHROPIC_BASE_URL=https://openrouter.ai/api
ANTHROPIC_AUTH_TOKEN=sk-or-v1-your-key-here
ANTHROPIC_MODEL=anthropic/claude-sonnet-4.5

# Alternative models (for reference)
# ANTHROPIC_MODEL=anthropic/claude-opus-4.1      # Most capable
# ANTHROPIC_MODEL=anthropic/claude-haiku-4.5     # Fastest/cheapest

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3456
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# ============================================
# WORKSPACE CONFIGURATION
# ============================================
WORKSPACE_BASE_PATH=/tmp/claude-agent-workspaces
MAX_WORKSPACE_SIZE_MB=500

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=../logs
