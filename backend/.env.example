# ============================================
# OPENROUTER CONFIGURATION
# ============================================
ANTHROPIC_BASE_URL=https://openrouter.ai/api
ANTHROPIC_AUTH_TOKEN=sk-or-v1-your-key-here
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=anthropic/claude-sonnet-4

# Alternative models (for reference)
# ANTHROPIC_MODEL=anthropic/claude-opus-4.1      # Most capable
# ANTHROPIC_MODEL=anthropic/claude-haiku-4.5     # Fastest/cheapest

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3456
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# MONGODB CONFIGURATION
# ============================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@openanalystweb.arnodzc.mongodb.net/openanalyst?appName=openanalystweb

# ============================================
# KAFKA CONFIGURATION
# ============================================
# Option 1: Self-hosted Kafka on EC2 (Production recommended)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_USE_SSL=false
# No API keys needed for local Kafka

# Option 2: Confluent Cloud (uncomment if using cloud)
# KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.region.confluent.cloud:9092
# KAFKA_API_KEY=your-kafka-api-key
# KAFKA_API_SECRET=your-kafka-api-secret
# KAFKA_USE_SSL=true

# Kafka topics
KAFKA_REQUEST_TOPIC=agent-requests
KAFKA_RESPONSE_TOPIC=agent-responses

# Consumer group ID
KAFKA_CONSUMER_GROUP=openanalyst-workers

# Client ID
KAFKA_CLIENT_ID=openanalyst-api

# ============================================
# PENDING RESPONSE CONFIGURATION
# ============================================
# Time-to-live for pending responses in hours
PENDING_RESPONSE_TTL_HOURS=24

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# ============================================
# WORKSPACE CONFIGURATION
# ============================================
WORKSPACE_BASE_PATH=/tmp/claude-agent-workspaces
MAX_WORKSPACE_SIZE_MB=500

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=../logs

# ============================================
# CORS (for production)
# ============================================
ALLOWED_ORIGINS=https://your-frontend.com,https://app.your-domain.com
